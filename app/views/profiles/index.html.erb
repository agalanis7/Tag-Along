<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Notification</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles %>
      <tr>
        <td><%= @profiles.first_name %></td>
        <td><%= @profiles.last_name %></td>
        <td><%= @profiles.gender %></td>
        <td><%= @profiles.email %></td>
        <td><%= @profiles.phone_number %></td>
        <td><%= @profiles.notification %></td>
        <td><%= link_to 'Show', @profiles %></td>
        <td><%#= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%#= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

  </tbody>
</table>

